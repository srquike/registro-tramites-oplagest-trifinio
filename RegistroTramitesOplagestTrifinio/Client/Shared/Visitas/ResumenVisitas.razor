<h4 class="mt-4">Resumen de visitas</h4>

<div class="row row-cols-sm-1 row-cols-md-1 row-cols-xl-3 row-cols-xxl-4 g-4">
    <div class="col">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center">
                <p class="card-title p-2 m-0" style="font-size:50px;">@Visitas.Count.ToString("N1", CultureInfo.InvariantCulture)</p>
                <div class="flex-fill p-2">
                    <p class="card-text">
                        <span class="oi oi-calendar" aria-hidden="true"></span> Visitas t&eacute;cnicas agendadas
                    </p>
                    <div class="d-grid">
                        <a href="/agenda-de-visitas" class="btn btn-outline-primary">Ver</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center">
                <p class="card-title p-2 m-0" style="font-size:50px;">@_visitaRealizadas.ToString("N1", CultureInfo.InvariantCulture)</p>
                <div class="flex-fill p-2">
                    <p class="card-text">
                        <span class="oi oi-calendar" aria-hidden="true"></span> Visitas t&eacute;cnicas realizadas
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center">
                <p class="card-title p-2 m-0" style="font-size:50px;">@_visitaNoRealizadas.ToString("N1", CultureInfo.InvariantCulture)</p>
                <div class="flex-fill p-2">
                    <p class="card-text">
                        <span class="oi oi-calendar" aria-hidden="true"></span> Visitas t&eacute;cnicas no realizadas
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code 
{
    [Parameter]
    public List<VisitaDTO>? Visitas { get; set; }

    private int _visitaRealizadas = 0;
    private int _visitaNoRealizadas = 0;

    protected override void OnParametersSet()
    {
        _visitaRealizadas = Visitas.Where(v => v.Estado == "Realizada").Count();
        _visitaNoRealizadas = Visitas.Where(v => v.Estado == "Sin realizar").Count();
    }
}