@if (Requisitos == null)
{
    <div class="d-flex align-items-center">
        <img src="images/progress.gif" width="50" />
        <p class="m-0">Cargando lista de requisitos...</p>
    </div>
}
else if (Requisitos.Count == 0)
{
    <div class="d-flex align-items-center">
        <img src="images/progress.gif" width="50" />
        <p class="m-0">No hay requisitos por mostrar</p>
    </div>
}
else
{
    <label for="requisitos" class="form-label">Requisitos</label>
    <div class="form-group" id="requisitos">
        @foreach (var requisito in Requisitos!)
        {
            <div class="form-check form-switch">
                <InputCheckbox @bind-Value="@requisito.Entregado" id="@requisito.Nombre" class="form-check-input"></InputCheckbox>
                <label for="@requisito.Nombre" class="form-check-label">@requisito.Nombre</label>
            </div>
        }
    </div>
}

@code 
{
    [Parameter] 
    public List<TramiteRequisitoDTO>? Requisitos { get; set; }
}